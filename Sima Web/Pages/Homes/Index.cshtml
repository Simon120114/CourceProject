@page
@using Sima_Web.Models
@model WebApplication1.Pages.Homes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quarter[0].Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quarter[0].AddressStreet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quarter[0].AddressArea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quarter[0].Owner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quarter[0].TypeHouse)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (Quarter item in Model.Quarter)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressStreet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressArea.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeHouse.Name)
            </td>
            <td>
                <a asp-page="./Edit"
                   asp-route-id="@item.Id">
                    Edit
                </a> |
                <a asp-page="./Details"
                   asp-route-id="@item.Id">
                    Details
                </a> |
                <a asp-page="./Delete"
                   asp-route-id="@item.Id">
                    Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
